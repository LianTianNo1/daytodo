{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "小浪Todo",
  "version": "0.1.0",
  "identifier": "com.xiaolang.daytodo.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "小浪Todo",
        "width": 900,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["$APP/*"],
        "deny": []
      }
    }
  }
}
